---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
<head>
    <!-- BaseHead component with title and description -->
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

    <!-- Pannellum panorama viewer styles and script -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.css"/>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.js"></script>

    <style>
        body {
            margin: 0; /* Remove default margin */
        }
        main {
            width: 90%;
            max-width: calc(100% - 2em);
            margin: auto;
            padding: 3em 1em;
        }
        iframe {
            width: 100%; /* Set all iframes to full width */
            height:100%;
            border: none; /* Remove borders for all iframes */
            display: block; /* Ensure iframes behave like block elements */
        }
        .pano-container {
            position: relative; /* Create a relative container for positioning */
            width: 100%;
            aspect-ratio: 16 / 8; /* Fixed height for the panorama */
            overflow: hidden; /* Hide any overflow */
            margin: 0; /* Reset margin */
            border: 4px solid rgb(0, 0, 0);
            box-shadow: 0 0 0 0.7px rgb(255, 255, 255);
        }
        .pano-container iframe {
            position: absolute; /* Absolutely position the iframe */
            top: 0; /* Align to the top */
            left: 0; /* Align to the left */
            height: 100%; /* Full height of the container */
        }
        section {
            padding: 1em; /* Padding for the text below */
        }
    </style>
</head>
<body>
    <!-- Header component -->
    <Header />

    <main>
        <!-- Embed Pannellum Panorama -->
        <div id="panorama" class="pano-container"></div>
        <script>
        pannellum.viewer('panorama', {
           
        "default": {
